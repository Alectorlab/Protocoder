<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/item_menu_list"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/customViewImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center|left"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/card_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/customViewImage"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_overflow_light" />

            <TextView
                android:id="@+id/customViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/customViewImage"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:shadowColor="#88FFFFFF"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.1"
                android:text="Title"
                android:textColor="#666666"
                android:textSize="21sp"
                android:typeface="normal" />

            <View
                android:id="@+id/view1"
                android:layout_alignParentBottom="true"
                android:background="#55BBBBBB"
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

        </RelativeLayout>
    </FrameLayout>

</merge>