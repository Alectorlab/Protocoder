<?xml version="1.0" encoding="utf-8"?>
<manifest
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     package="org.protocoder">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <!-- android:resizeableActivity = "true" -->

    <application
        android:name=".App"
        android:icon="@drawable/protocoder_icon"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme = "@style/Theme.AppCompat"
        tools:replace="android:allowBackup"
        >

        <activity
            android:name=".LauncherActivity"
            android:icon="@drawable/protocoder_icon"
            android:label="@string/activity_name"
            android:logo="@drawable/protocoder_icon"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="org.protocoder.LauncherActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!--<category android:name="android.intent.category.HOME"/>-->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>
        </activity>


        <!--android:stateNotNeeded="true"-->
        <activity
            android:name=".MainActivity"
            android:icon="@drawable/protocoder_icon"
            android:label="@string/activity_name"
            android:logo="@drawable/protocoder_icon"
            android:theme="@style/ProtocoderAppTheme">

            <intent-filter>
                <action android:name="org.protocoder.intent.EXECUTE"></action>
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>

            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />-->
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />

        </activity>

        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/ProtocoderAppTheme"
            android:label="@string/welcome_activity_name" >
        </activity>
        <activity
            android:name=".gui.settings.SettingsActivity"
            android:theme="@style/ProtocoderAppTheme"
            android:label="@string/settings_activity_name" >
        </activity>
        <activity
            android:name=".gui.editor.EditorActivity"
            android:theme="@style/ProtocoderAppTheme"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/editor_activity_name" >
        </activity>
        <activity
            android:name=".gui.LicenseActivity"
            android:theme="@style/ProtocoderAppTheme"
            android:label="License" >
        </activity>

        <service
            android:name=".server.ProtocoderServerService"
            android:exported="false">

            <intent-filter>
                <action android:name="org.protocoder.intent.CONSOLE"></action>
            </intent-filter>

            <!-- intent when apprunner is closed -->
            <intent-filter>
                <action android:name="org.protocoder.intent.CLOSED"></action>
            </intent-filter>
        </service>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="org.protocoder.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />

        </provider>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e695b3cb70f0d5818228eba14be7c84ecff849cf" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>