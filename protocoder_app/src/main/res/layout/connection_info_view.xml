<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ip_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/computer_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/computer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/computer_image"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connection_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connection_message_other"
            android:textColor="#55FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/button12"
            android:layout_alignEnd="@+id/button12" />

        <TextView
            android:id="@+id/connection_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            android:text="http://1.2.3.4.5:8585"
            android:layout_below="@+id/connection_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/?"
            android:id="@+id/button12"
            android:layout_gravity="right|center_vertical"
            android:layout_alignBottom="@+id/connection_ip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>