<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ProtocoderThemeApp -->
    <style name="ProtocoderAppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/ProtocoderAppTheme.ActionBarStyle</item>
        <item name="android:windowBackground">@drawable/protocoder_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogTheme">@style/ProtocoderAppTheme.Dialog</item>
        <item name="colorAccent">@color/protocoder_mainColor</item>
        <item name="android:textColorSecondary">@color/protocoder_mainColor</item>
    </style>

    <style name="ProtocoderAppTheme" parent="ProtocoderAppTheme.Base">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/protocoder_backgroundColor</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/protocoder_backgroundColor</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->

        <item name="colorAccent">@color/protocoder_accentColor</item>
        <item name="android:textColorSecondary">@color/protocoder_mainColor</item>
    </style>

    <style name="ProtocoderAppTheme.Toolbar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ProtocoderAppTheme.ActionBarStyle</item>
        <item name="android:background">@color/mwmyellow</item>
    </style>

    <style name="ProtocoderAppTheme.ActionBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryAccent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_highlight</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@drawable/protocoder_icon</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="ProtocoderAppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">14sp</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:textColor">@color/protocoder_mainColor</item>
        <item name="colorAccent">@color/protocoder_mainColor</item>

        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
    </style>

    <!-- ProtocoderThemeAppRunner -->

</resources>